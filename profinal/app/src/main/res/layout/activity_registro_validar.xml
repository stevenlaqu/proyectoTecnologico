<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartgarden.RegistroValidarActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntubold"
            android:textSize="24dp"
            android:text="Por favor valida tus datos"
            android:textColor="@color/colorTextoDescrip"
            android:layout_gravity="center"/>

            <EditText
                android:inputType="number"
                android:maxLength="8"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:hint="21921921"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:background="#dddddd"            >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntubold"
                        android:textSize="16dp"
                        android:text="Nombres:"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubunturegular"
                        android:textSize="16dp"
                        android:text="Juan Eleuterio"/>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntubold"
                        android:textSize="16dp"
                        android:text="Género:"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubunturegular"
                        android:textSize="16dp"
                        android:text="Masculino"/>

            </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntubold"
                        android:textSize="16dp"
                        android:text="Apellidos:"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubunturegular"
                        android:textSize="16dp"
                        android:text="Quispe Mamani"/>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntubold"
                        android:textSize="16dp"
                        android:text="Fec. de Nacimiento:"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubunturegular"
                        android:textSize="16dp"
                        android:text="31/12/1975"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Ingresar código de verificación:"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"/>
        <EditText
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:maxLength="4"
            android:letterSpacing="1.2"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:hint="3860"
            android:textSize="32dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"

            android:text="enviado vìa SMS al telèfono 955 123 555"
            android:textColor="#9a9a9a"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btnValCont"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/ubunturegular"
            android:textColor="#ffffff"
            android:background="@color/colorFormaAct"/>
    </LinearLayout>


</RelativeLayout>